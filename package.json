{
  "name": "nest-next-admin",
  "version": "0.0.1",
  "description": "NestJS backend with Next.js admin interface",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "backend",
    "admin"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:admin\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:admin": "cd admin && npm run dev",
    "build": "npm run build:backend && npm run build:admin",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm run start:prod",
    "start:admin": "cd admin && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../admin && npm install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:backend": "cd backend && npm run lint",
    "lint:admin": "cd admin && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:backend": "cd backend && npm run format",
    "format:admin": "cd admin && npm run format",
    "quality": "npm run lint && npm run format",
    "quality:check": "npm run lint:check && npm run format:check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
